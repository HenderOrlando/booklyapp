{
  "info": {
    "name": "Bookly Resource Import",
    "description": "Postman collection for Bookly Resources Service - Bulk Resource Import endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": {
      "major": 1,
      "minor": 0,
      "patch": 0
    }
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3003",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "import_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Upload CSV for Import",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            },
            {
              "key": "validateOnly",
              "value": "false",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/resource-import/upload",
          "host": ["{{base_url}}"],
          "path": ["resource-import", "upload"]
        },
        "description": "Upload a CSV file for resource import validation and processing"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has import data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('importId');",
              "    pm.expect(jsonData).to.have.property('fileName');",
              "    pm.expect(jsonData).to.have.property('totalRecords');",
              "});",
              "",
              "// Store import ID for other requests",
              "if (pm.response.code === 201) {",
              "    var jsonData = pm.response.json();",
              "    pm.collectionVariables.set('import_id', jsonData.importId);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Validate CSV Only",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": []
            },
            {
              "key": "validateOnly",
              "value": "true",
              "type": "text"
            }
          ]
        },
        "url": {
          "raw": "{{base_url}}/resource-import/upload",
          "host": ["{{base_url}}"],
          "path": ["resource-import", "upload"]
        },
        "description": "Validate CSV file format and data without importing"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has validation results\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('isValid');",
              "    pm.expect(jsonData).to.have.property('totalRecords');",
              "    pm.expect(jsonData).to.have.property('validRecords');",
              "    pm.expect(jsonData).to.have.property('errors');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Import Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/resource-import/{{import_id}}/status",
          "host": ["{{base_url}}"],
          "path": ["resource-import", "{{import_id}}", "status"]
        },
        "description": "Get the current status of an import process"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has status data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('importId');",
              "    pm.expect(jsonData).to.have.property('status');",
              "    pm.expect(jsonData).to.have.property('progress');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Import History",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/resource-import/history?page=1&limit=10",
          "host": ["{{base_url}}"],
          "path": ["resource-import", "history"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "description": "Get paginated history of import operations"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has pagination data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('imports');",
              "    pm.expect(jsonData).to.have.property('total');",
              "    pm.expect(jsonData).to.have.property('page');",
              "    pm.expect(jsonData).to.have.property('limit');",
              "    pm.expect(jsonData.imports).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Import Details",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/resource-import/{{import_id}}",
          "host": ["{{base_url}}"],
          "path": ["resource-import", "{{import_id}}"]
        },
        "description": "Get detailed information about a specific import"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has import details\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('importId');",
              "    pm.expect(jsonData).to.have.property('fileName');",
              "    pm.expect(jsonData).to.have.property('status');",
              "    pm.expect(jsonData).to.have.property('totalRecords');",
              "    pm.expect(jsonData).to.have.property('successfulRecords');",
              "    pm.expect(jsonData).to.have.property('failedRecords');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Download Import Results",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/resource-import/{{import_id}}/download",
          "host": ["{{base_url}}"],
          "path": ["resource-import", "{{import_id}}", "download"]
        },
        "description": "Download detailed results of an import operation as CSV"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response is CSV format\", function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('text/csv');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Cancel Import",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/resource-import/{{import_id}}/cancel",
          "host": ["{{base_url}}"],
          "path": ["resource-import", "{{import_id}}", "cancel"]
        },
        "description": "Cancel an ongoing import process"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Import was cancelled\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('status');",
              "    pm.expect(jsonData.status).to.eql('CANCELLED');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get CSV Template",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/resource-import/template",
          "host": ["{{base_url}}"],
          "path": ["resource-import", "template"]
        },
        "description": "Download CSV template for resource import"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response is CSV format\", function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('text/csv');",
              "});",
              "",
              "pm.test(\"CSV has required headers\", function () {",
              "    var csvContent = pm.response.text();",
              "    pm.expect(csvContent).to.include('name');",
              "    pm.expect(csvContent).to.include('type');",
              "    pm.expect(csvContent).to.include('capacity');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
