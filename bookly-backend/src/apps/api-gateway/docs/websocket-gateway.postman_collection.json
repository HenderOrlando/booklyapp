{
  "info": {
    "name": "Bookly WebSocket Gateway",
    "description": "Colección de Postman para testing del WebSocket Gateway de Bookly. Incluye endpoints para emitir eventos de prueba que serán distribuidos via WebSocket a los clientes conectados.",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-refresh JWT token if expired",
          "const token = pm.environment.get('jwt_token');",
          "if (!token) {",
          "    console.log('No JWT token found. Please login first.');",
          "    return;",
          "}",
          "",
          "// Check if token is expired (basic check)",
          "try {",
          "    const payload = JSON.parse(atob(token.split('.')[1]));",
          "    const currentTime = Math.floor(Date.now() / 1000);",
          "    ",
          "    if (payload.exp < currentTime) {",
          "        console.log('JWT token expired. Please refresh token.');",
          "    }",
          "} catch (e) {",
          "    console.log('Invalid JWT token format');",
          "}"
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "{{gateway_url}}",
      "type": "string"
    }
  ],
  "item": [
