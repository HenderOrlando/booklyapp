      "name": "WebSocket Event Testing",
      "item": [
        {
          "name": "Emit Reservation Created Event",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status code is 201', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has success flag', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.eventId).to.exist;",
                  "    pm.expect(jsonData.eventType).to.eql('reservation-created');",
                  "});",
                  "",
                  "// Store eventId for potential cleanup",
                  "const jsonData = pm.response.json();",
                  "pm.environment.set('last_event_id', jsonData.eventId);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
