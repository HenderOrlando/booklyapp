    {
      "name": "Batch Event Testing",
      "item": [
        {
          "name": "Simulate Reservation Workflow",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "// Generate consistent IDs for the workflow",
                  "const reservationId = pm.globals.replaceIn('{{$randomUUID}}');",
                  "const resourceId = 'sala-202';",
                  "const userId = pm.environment.get('user_id');",
                  "",
                  "pm.environment.set('workflow_reservation_id', reservationId);",
                  "pm.environment.set('workflow_resource_id', resourceId);",
                  "pm.environment.set('workflow_user_id', userId);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Reservation created successfully', function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "// Chain to approval after 2 seconds",
                  "setTimeout(() => {",
                  "    const approveReservationRequest = {",
                  "        url: pm.environment.get('gateway_url') + '/websocket-test/emit-reservation-event',",
                  "        method: 'POST',",
                  "        header: {",
                  "            'Content-Type': 'application/json',",
                  "            'Authorization': 'Bearer ' + pm.environment.get('jwt_token')",
                  "        },",
                  "        body: {",
                  "            mode: 'raw',",
                  "            raw: JSON.stringify({",
                  "                eventType: 'reservation-approved',",
                  "                aggregateId: 'reservation_' + pm.environment.get('workflow_reservation_id'),",
                  "                userId: pm.environment.get('workflow_user_id'),",
                  "                data: {",
                  "                    reservationId: pm.environment.get('workflow_reservation_id'),",
                  "                    resourceId: pm.environment.get('workflow_resource_id'),",
                  "                    resourceName: 'Sala de Juntas 202',",
                  "                    approvedBy: 'admin_workflow',",
                  "                    approvedAt: new Date().toISOString(),",
                  "                    status: 'APPROVED'",
                  "                }",
                  "            })",
                  "        }",
                  "    };",
                  "    ",
                  "    pm.sendRequest(approveReservationRequest, (err, res) => {",
                  "        console.log('Auto-approved reservation:', res.json());",
                  "    });",
                  "}, 2000);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventType\": \"reservation-created\",\n  \"aggregateId\": \"reservation_{{workflow_reservation_id}}\",\n  \"userId\": \"{{workflow_user_id}}\",\n  \"data\": {\n    \"reservationId\": \"{{workflow_reservation_id}}\",\n    \"resourceId\": \"{{workflow_resource_id}}\",\n    \"resourceName\": \"Sala de Juntas 202\",\n    \"userId\": \"{{workflow_user_id}}\",\n    \"userName\": \"{{user_name}}\",\n    \"startTime\": \"2025-01-03T14:00:00.000Z\",\n    \"endTime\": \"2025-01-03T16:00:00.000Z\",\n    \"purpose\": \"Reunión de planificación estratégica\",\n    \"status\": \"PENDING_APPROVAL\",\n    \"participants\": 12\n  }\n}"
            },
