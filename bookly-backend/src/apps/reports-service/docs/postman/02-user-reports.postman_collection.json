{
	"info": {
		"_postman_id": "user-reports-collection",
		"name": "Reports Service - User Reports",
		"description": "Collection for testing User Reports endpoints (RF-32)\n\nThis collection covers:\n- Generate user reservation reports\n- Get user report summaries\n- View report history\n- Get personal statistics\n\nAll endpoints require JWT authentication.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{jwt_token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"if (!pm.environment.get('base_url')) {",
					"    pm.environment.set('base_url', 'http://localhost:3004');",
					"}",
					"",
					"if (!pm.environment.get('jwt_token')) {",
					"    console.warn('JWT token not set. Please set jwt_token in environment variables.');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"pm.test('Response time is less than 5000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(5000);",
					"});",
					"",
					"pm.test('Content-Type is application/json', function () {",
					"    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
					"});"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3004",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Generate User Report - All Users",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response has user data array', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('data');",
							"    pm.expect(jsonData.data).to.be.an('array');",
							"});",
							"",
							"pm.test('User data contains required fields', function () {",
							"    const jsonData = pm.response.json();",
							"    if (jsonData.data.length > 0) {",
							"        const user = jsonData.data[0];",
							"        pm.expect(user).to.have.property('userId');",
							"        pm.expect(user).to.have.property('userName');",
							"        pm.expect(user).to.have.property('userEmail');",
							"        pm.expect(user).to.have.property('totalReservations');",
							"        pm.expect(user).to.have.property('utilizationRate');",
							"    }",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/users?startDate=2024-01-01&endDate=2024-01-31&page=1&limit=15",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"users"
					],
					"query": [
						{
							"key": "startDate",
							"value": "2024-01-01",
							"description": "Start date for the report period"
						},
						{
							"key": "endDate",
							"value": "2024-01-31",
							"description": "End date for the report period"
						},
						{
							"key": "page",
							"value": "1",
							"description": "Page number for pagination"
						},
						{
							"key": "limit",
							"value": "15",
							"description": "Number of items per page"
						}
					]
				},
				"description": "Generate user reservation report for all users in a given period"
			}
		},
		{
			"name": "Generate User Report - Teachers Only",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('All users are teachers', function () {",
							"    const jsonData = pm.response.json();",
							"    if (jsonData.data && jsonData.data.length > 0) {",
							"        jsonData.data.forEach(user => {",
							"            pm.expect(user.userType).to.equal('TEACHER');",
							"        });",
							"    }",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/users?userType=TEACHER&startDate=2024-02-01&endDate=2024-02-29",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"users"
					],
					"query": [
						{
							"key": "userType",
							"value": "TEACHER",
							"description": "Filter by teacher users only"
						},
						{
							"key": "startDate",
							"value": "2024-02-01",
							"description": "Start date for February"
						},
						{
							"key": "endDate",
							"value": "2024-02-29",
							"description": "End date for February"
						}
					]
				},
				"description": "Generate user report specifically for teachers"
			}
		},
