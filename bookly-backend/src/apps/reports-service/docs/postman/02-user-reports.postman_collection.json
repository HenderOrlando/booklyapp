		{
			"name": "User Report - Specific User IDs",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response contains only specified users', function () {",
							"    const jsonData = pm.response.json();",
							"    const requestedIds = ['usr_001', 'usr_002', 'usr_003'];",
							"    if (jsonData.data && jsonData.data.length > 0) {",
							"        jsonData.data.forEach(user => {",
							"            pm.expect(requestedIds).to.include(user.userId);",
							"        });",
							"    }",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/users?userIds=usr_001,usr_002,usr_003&startDate=2024-01-01&endDate=2024-01-31",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"users"
					],
					"query": [
						{
							"key": "userIds",
							"value": "usr_001,usr_002,usr_003",
							"description": "Filter by specific user IDs"
						},
						{
							"key": "startDate",
							"value": "2024-01-01",
							"description": "Start date for the report period"
						},
						{
							"key": "endDate",
							"value": "2024-01-31",
							"description": "End date for the report period"
						}
					]
				},
				"description": "Generate user report for specific user IDs"
			}
		}
