		},
		{
			"name": "Get User Report Summary",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Summary contains required metrics', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('totalUsers');",
							"    pm.expect(jsonData).to.have.property('totalReservations');",
							"    pm.expect(jsonData).to.have.property('averageReservationsPerUser');",
							"    pm.expect(jsonData).to.have.property('averageUtilization');",
							"});",
							"",
							"pm.test('Metrics are numbers', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.totalUsers).to.be.a('number');",
							"    pm.expect(jsonData.totalReservations).to.be.a('number');",
							"    pm.expect(jsonData.averageReservationsPerUser).to.be.a('number');",
							"    pm.expect(jsonData.averageUtilization).to.be.a('number');",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/users/summary?userType=TEACHER&startDate=2024-01-01&endDate=2024-01-31",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"users",
						"summary"
					],
					"query": [
						{
							"key": "userType",
							"value": "TEACHER",
							"description": "Filter by user type"
						},
						{
							"key": "startDate",
							"value": "2024-01-01",
							"description": "Start date for the summary period"
						},
						{
							"key": "endDate",
							"value": "2024-01-31",
							"description": "End date for the summary period"
						}
					]
				},
				"description": "Get summary statistics for user report with given filters"
			}
		},
		{
			"name": "Get Report History",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response is an array', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.be.an('array');",
							"});",
							"",
							"pm.test('Report history items have required fields', function () {",
							"    const jsonData = pm.response.json();",
							"    if (jsonData.length > 0) {",
							"        const report = jsonData[0];",
							"        pm.expect(report).to.have.property('id');",
							"        pm.expect(report).to.have.property('reportType');",
							"        pm.expect(report).to.have.property('createdAt');",
							"        pm.expect(report).to.have.property('status');",
							"    }",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/users/history?limit=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"users",
						"history"
					],
					"query": [
						{
							"key": "limit",
							"value": "10",
							"description": "Maximum number of reports to return"
						}
					]
				},
				"description": "Get history of reports generated by the current user"
			}
		},
		{
			"name": "Get My Personal Statistics",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Personal stats contain required metrics', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('totalReservations');",
							"    pm.expect(jsonData).to.have.property('confirmedReservations');",
							"    pm.expect(jsonData).to.have.property('cancelledReservations');",
							"    pm.expect(jsonData).to.have.property('utilizationRate');",
							"    pm.expect(jsonData).to.have.property('frequentResources');",
							"});",
							"",
							"pm.test('Frequent resources is an array', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.frequentResources).to.be.an('array');",
							"});"
