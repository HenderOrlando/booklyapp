{
	"info": {
		"_postman_id": "export-reports-collection",
		"name": "Reports Service - Export Reports",
		"description": "Collection for testing Export Reports endpoints (RF-33)\n\nThis collection covers:\n- Export reports to CSV format\n- Download exported CSV files\n- Check export status\n- View export history\n\nAll endpoints require JWT authentication.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{jwt_token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"if (!pm.environment.get('base_url')) {",
					"    pm.environment.set('base_url', 'http://localhost:3004');",
					"}",
					"",
					"if (!pm.environment.get('jwt_token')) {",
					"    console.warn('JWT token not set. Please set jwt_token in environment variables.');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"pm.test('Response time is less than 10000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(10000);",
					"});",
					"",
					"pm.test('Content-Type is application/json or text/csv', function () {",
					"    const contentType = pm.response.headers.get('Content-Type');",
					"    pm.expect(contentType).to.satisfy(type => ",
					"        type.includes('application/json') || type.includes('text/csv')",
					"    );",
					"});"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3004",
			"type": "string"
		},
		{
			"key": "export_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Export Usage Report to CSV",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 202', function () {",
							"    pm.response.to.have.status(202);",
							"});",
							"",
							"pm.test('Response contains export ID', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('exportId');",
							"    pm.expect(jsonData).to.have.property('message');",
							"    pm.expect(jsonData).to.have.property('estimatedTime');",
							"    ",
							"    // Store export ID for use in other requests",
							"    pm.environment.set('export_id', jsonData.exportId);",
							"});",
							"",
							"pm.test('Export ID is a string', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.exportId).to.be.a('string');",
							"    pm.expect(jsonData.exportId).to.have.length.greaterThan(0);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"reportType\": \"USAGE\",\n    \"filters\": {\n        \"programId\": \"ING-SIS\",\n        \"resourceType\": \"SALON\",\n        \"startDate\": \"2024-01-01\",\n        \"endDate\": \"2024-01-31\"\n    },\n    \"filename\": \"usage_report_january_2024\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/reports/export/csv",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"export",
						"csv"
					]
				},
				"description": "Export usage report data to CSV format with custom filename"
			}
		},
		{
			"name": "Export User Report to CSV",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 202', function () {",
							"    pm.response.to.have.status(202);",
							"});",
							"",
							"pm.test('Export request accepted', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('exportId');",
							"    pm.expect(jsonData.message).to.include('accepted');",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"reportType\": \"USER\",\n    \"filters\": {\n        \"userType\": \"TEACHER\",\n        \"startDate\": \"2024-01-01\",\n        \"endDate\": \"2024-03-31\"\n    },\n    \"filename\": \"teacher_report_q1_2024\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/reports/export/csv",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"export",
						"csv"
					]
				},
				"description": "Export user report data to CSV format for teachers"
			}
		},
		{
			"name": "Export Demand Report to CSV",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 202', function () {",
							"    pm.response.to.have.status(202);",
							"});",
							"",
							"pm.test('Demand export accepted', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('exportId');",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"reportType\": \"DEMAND\",\n    \"filters\": {\n        \"programId\": \"ING-SIS\",\n        \"startDate\": \"2024-01-01\",\n        \"endDate\": \"2024-01-31\",\n        \"includeWaitlist\": true\n    },\n    \"filename\": \"demand_analysis_january_2024\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/reports/export/csv",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"export",
						"csv"
					]
				},
				"description": "Export demand analysis report to CSV format"
			}
		},
		{
			"name": "Check Export Status",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Status response contains required fields', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('id');",
							"    pm.expect(jsonData).to.have.property('status');",
							"    pm.expect(jsonData).to.have.property('progress');",
							"    pm.expect(jsonData).to.have.property('createdAt');",
							"});",
							"",
							"pm.test('Status is valid', function () {",
							"    const jsonData = pm.response.json();",
							"    const validStatuses = ['PENDING', 'PROCESSING', 'COMPLETED', 'FAILED'];",
							"    pm.expect(validStatuses).to.include(jsonData.status);",
							"});",
							"",
							"pm.test('Progress is between 0 and 100', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.progress).to.be.at.least(0);",
							"    pm.expect(jsonData.progress).to.be.at.most(100);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/export/status/{{export_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"export",
						"status",
						"{{export_id}}"
					]
				},
				"description": "Check the status of a CSV export request using stored export ID"
			}
		},
		{
			"name": "Download Export - CSV File",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200 or 404', function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 404]);",
							"});",
							"",
							"if (pm.response.code === 200) {",
							"    pm.test('Content-Type is text/csv', function () {",
							"        pm.expect(pm.response.headers.get('Content-Type')).to.include('text/csv');",
							"    });",
							"    ",
							"    pm.test('Content-Disposition header is present', function () {",
							"        pm.expect(pm.response.headers.get('Content-Disposition')).to.include('attachment');",
							"    });",
							"    ",
							"    pm.test('Response body is not empty', function () {",
							"        pm.expect(pm.response.text()).to.have.length.greaterThan(0);",
							"    });",
							"} else {",
							"    pm.test('404 response has error message', function () {",
							"        const jsonData = pm.response.json();",
							"        pm.expect(jsonData).to.have.property('message');",
							"    });",
							"}"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "text/csv",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/export/download/{{export_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"export",
						"download",
						"{{export_id}}"
					]
				},
				"description": "Download the CSV file for a completed export using stored export ID"
			}
		},
		{
			"name": "Get Export History",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response has exports array', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('exports');",
							"    pm.expect(jsonData.exports).to.be.an('array');",
							"});",
							"",
							"pm.test('Response has pagination info', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('pagination');",
							"    pm.expect(jsonData.pagination).to.have.property('page');",
							"    pm.expect(jsonData.pagination).to.have.property('limit');",
							"});",
							"",
							"pm.test('Export items have required fields', function () {",
							"    const jsonData = pm.response.json();",
							"    if (jsonData.exports.length > 0) {",
							"        const exportItem = jsonData.exports[0];",
							"        pm.expect(exportItem).to.have.property('id');",
							"        pm.expect(exportItem).to.have.property('filename');",
							"        pm.expect(exportItem).to.have.property('reportType');",
							"        pm.expect(exportItem).to.have.property('status');",
							"        pm.expect(exportItem).to.have.property('createdAt');",
							"    }",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/export/history?page=1&limit=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"export",
						"history"
					],
					"query": [
						{
							"key": "page",
							"value": "1",
							"description": "Page number for pagination"
						},
						{
							"key": "limit",
							"value": "10",
							"description": "Number of items per page"
						}
					]
				},
				"description": "Get history of CSV exports for the current user"
			}
		},
		{
			"name": "Export - Invalid Report Type",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 400', function () {",
							"    pm.response.to.have.status(400);",
							"});",
							"",
							"pm.test('Error response structure', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('code');",
							"    pm.expect(jsonData).to.have.property('message');",
							"    pm.expect(jsonData.type).to.equal('error');",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"reportType\": \"INVALID_TYPE\",\n    \"filters\": {\n        \"startDate\": \"2024-01-01\",\n        \"endDate\": \"2024-01-31\"\n    }\n}"
				},
				"url": {
					"raw": "{{base_url}}/reports/export/csv",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"export",
						"csv"
					]
				},
				"description": "Test error handling for invalid report type"
			}
		},
		{
			"name": "Download Non-existent Export",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 404', function () {",
							"    pm.response.to.have.status(404);",
							"});",
							"",
							"pm.test('Error response for non-existent export', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('message');",
							"    pm.expect(jsonData.http_code).to.equal(404);",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "text/csv",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/export/download/non_existent_export_id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"export",
						"download",
						"non_existent_export_id"
					]
				},
				"description": "Test error handling for non-existent export ID"
			}
		}
	]
}
