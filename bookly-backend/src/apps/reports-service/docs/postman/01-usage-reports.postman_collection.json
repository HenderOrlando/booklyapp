{
	"info": {
		"_postman_id": "usage-reports-collection",
		"name": "Reports Service - Usage Reports",
		"description": "Collection for testing Usage Reports endpoints (RF-31)\n\nThis collection covers:\n- Generate usage reports with filters\n- Get usage report summaries\n- Filter options for usage reports\n\nAll endpoints require JWT authentication.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{jwt_token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set base URL if not already set",
					"if (!pm.environment.get('base_url')) {",
					"    pm.environment.set('base_url', 'http://localhost:3004');",
					"}",
					"",
					"// Check if JWT token is available",
					"if (!pm.environment.get('jwt_token')) {",
					"    console.warn('JWT token not set. Please set jwt_token in environment variables.');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Common test for all requests",
					"pm.test('Response time is less than 5000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(5000);",
					"});",
					"",
					"pm.test('Content-Type is application/json', function () {",
					"    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
					"});"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3004",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Generate Usage Report",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response has data array', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('data');",
							"    pm.expect(jsonData.data).to.be.an('array');",
							"});",
							"",
							"pm.test('Response has summary object', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('summary');",
							"    pm.expect(jsonData.summary).to.be.an('object');",
							"});",
							"",
							"pm.test('Response has pagination info', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('pagination');",
							"    pm.expect(jsonData.pagination).to.have.property('page');",
							"    pm.expect(jsonData.pagination).to.have.property('limit');",
							"    pm.expect(jsonData.pagination).to.have.property('total');",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/usage?programId=ING-SIS&resourceType=SALON&startDate=2024-01-01&endDate=2024-01-31&page=1&limit=10",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"usage"
					],
					"query": [
						{
							"key": "programId",
							"value": "ING-SIS",
							"description": "Filter by academic program"
						},
						{
							"key": "resourceType",
							"value": "SALON",
							"description": "Filter by resource type"
						},
						{
							"key": "startDate",
							"value": "2024-01-01",
							"description": "Start date for the report period"
						},
						{
							"key": "endDate",
							"value": "2024-01-31",
							"description": "End date for the report period"
						},
						{
							"key": "page",
							"value": "1",
							"description": "Page number for pagination"
						},
						{
							"key": "limit",
							"value": "10",
							"description": "Number of items per page"
						}
					]
				},
				"description": "Generate detailed usage report filtered by program, period, and resource type"
			}
		},
		{
			"name": "Generate Usage Report - All Resources",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response contains usage data', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.data).to.be.an('array');",
							"    if (jsonData.data.length > 0) {",
							"        const firstItem = jsonData.data[0];",
							"        pm.expect(firstItem).to.have.property('resourceId');",
							"        pm.expect(firstItem).to.have.property('resourceName');",
							"        pm.expect(firstItem).to.have.property('totalReservations');",
							"        pm.expect(firstItem).to.have.property('utilizationRate');",
							"    }",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/usage?startDate=2024-01-01&endDate=2024-03-31&page=1&limit=20",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"usage"
					],
					"query": [
						{
							"key": "startDate",
							"value": "2024-01-01",
							"description": "Start date for the report period"
						},
						{
							"key": "endDate",
							"value": "2024-03-31",
							"description": "End date for the report period"
						},
						{
							"key": "page",
							"value": "1",
							"description": "Page number for pagination"
						},
						{
							"key": "limit",
							"value": "20",
							"description": "Number of items per page"
						}
					]
				},
				"description": "Generate usage report for all resources in a quarter"
			}
		},
		{
			"name": "Generate Usage Report - Laboratory Resources",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('All resources are laboratories', function () {",
							"    const jsonData = pm.response.json();",
							"    if (jsonData.data && jsonData.data.length > 0) {",
							"        jsonData.data.forEach(item => {",
							"            pm.expect(item.resourceType).to.equal('LABORATORIO');",
							"        });",
							"    }",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/usage?resourceType=LABORATORIO&startDate=2024-02-01&endDate=2024-02-29",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"usage"
					],
					"query": [
						{
							"key": "resourceType",
							"value": "LABORATORIO",
							"description": "Filter by laboratory resources only"
						},
						{
							"key": "startDate",
							"value": "2024-02-01",
							"description": "Start date for February"
						},
						{
							"key": "endDate",
							"value": "2024-02-29",
							"description": "End date for February"
						}
					]
				},
				"description": "Generate usage report specifically for laboratory resources"
			}
		},
		{
			"name": "Usage Report - Invalid Date Range",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 400', function () {",
							"    pm.response.to.have.status(400);",
							"});",
							"",
							"pm.test('Error response structure', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('code');",
							"    pm.expect(jsonData).to.have.property('message');",
							"    pm.expect(jsonData).to.have.property('type');",
							"    pm.expect(jsonData.type).to.equal('error');",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/usage?startDate=2024-03-01&endDate=2024-01-31",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"usage"
					],
					"query": [
						{
							"key": "startDate",
							"value": "2024-03-01",
							"description": "Start date after end date (invalid)"
						},
						{
							"key": "endDate",
							"value": "2024-01-31",
							"description": "End date before start date (invalid)"
						}
					]
				},
				"description": "Test error handling for invalid date range"
			}
		},
		{
			"name": "Usage Report - Unauthorized Access",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"type": "text/javascript",
						"exec": [
							"// Remove authorization for this request",
							"pm.request.auth = null;"
						]
					}
				},
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 401', function () {",
							"    pm.response.to.have.status(401);",
							"});",
							"",
							"pm.test('Unauthorized error response', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('message');",
							"    pm.expect(jsonData.http_code).to.equal(401);",
							"});"
						]
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/usage",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"usage"
					]
				},
				"description": "Test unauthorized access to usage reports"
			}
		}
	]
}
