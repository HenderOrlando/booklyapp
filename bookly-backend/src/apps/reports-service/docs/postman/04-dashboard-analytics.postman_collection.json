{
	"info": {
		"_postman_id": "dashboard-analytics-collection",
		"name": "Reports Service - Dashboard & Analytics",
		"description": "Collection for testing Dashboard and Analytics endpoints (RF-36)\n\nThis collection covers:\n- Get real-time dashboard data\n- Analytics with different time periods\n- Program-specific dashboard data\n- Dashboard alerts and notifications\n\nAll endpoints require JWT authentication.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{jwt_token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"if (!pm.environment.get('base_url')) {",
					"    pm.environment.set('base_url', 'http://localhost:3004');",
					"}",
					"",
					"if (!pm.environment.get('jwt_token')) {",
					"    console.warn('JWT token not set. Please set jwt_token in environment variables.');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"pm.test('Response time is less than 3000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(3000);",
					"});",
					"",
					"pm.test('Content-Type is application/json', function () {",
					"    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
					"});"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3004",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Get Dashboard Data - Current Month",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Dashboard has summary section', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('summary');",
							"    pm.expect(jsonData.summary).to.be.an('object');",
							"});",
							"",
							"pm.test('Summary contains key metrics', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.summary).to.have.property('totalReservations');",
							"    pm.expect(jsonData.summary).to.have.property('activeReservations');",
							"    pm.expect(jsonData.summary).to.have.property('utilizationRate');",
							"    pm.expect(jsonData.summary).to.have.property('topResources');",
							"});",
							"",
							"pm.test('Dashboard has charts section', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('charts');",
							"    pm.expect(jsonData.charts).to.be.an('object');",
							"});",
							"",
							"pm.test('Charts contain required data', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData.charts).to.have.property('reservationTrends');",
							"    pm.expect(jsonData.charts).to.have.property('resourceUtilization');",
							"    pm.expect(jsonData.charts).to.have.property('userActivity');",
							"});",
							"",
							"pm.test('Dashboard has alerts section', function () {",
							"    const jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('alerts');",
							"    pm.expect(jsonData.alerts).to.be.an('array');",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/reports/dashboard?period=MONTH",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"reports",
						"dashboard"
					],
					"query": [
						{
							"key": "period",
							"value": "MONTH",
							"description": "Time period for dashboard data"
						}
					]
				},
				"description": "Get dashboard data for the current month with all analytics"
			}
		},
