# =================================
# BOOKLY BACKEND - DESARROLLO LOCAL
# =================================
# Este archivo es para desarrollo local (fuera de Docker)
# Copia este archivo a .env cuando desarrolles localmente

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=Bookly Backend
APP_VERSION=1.0.0

# Service Host Configuration
# En desarrollo local usar localhost para que solo escuche conexiones locales
SERVICE_HOST=localhost

# Database Configuration (MongoDB)
# Para desarrollo local, conectar a MongoDB en Docker
DATABASE_URL="mongodb://bookly:bookly123@localhost:27017,localhost:27018,localhost:27019/bookly?replicaSet=bookly-rs&authSource=admin"
DATABASE_NAME=bookly

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=bookly123
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://bookly:bookly123@localhost:5672/bookly
RABBITMQ_USER=bookly
RABBITMQ_PASSWORD=bookly123
RABBITMQ_VHOST=bookly

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-only-for-local-development
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev-super-secret-refresh-jwt-key-only-for-local-development
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=10
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# Observability Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

OTEL_SERVICE_NAME=bookly-backend
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Internationalization
DEFAULT_LANGUAGE=es
FALLBACK_LANGUAGE=en

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# Swagger Documentation
SWAGGER_TITLE=Bookly API
SWAGGER_DESCRIPTION=Sistema de Reservas Institucionales API
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Email Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@bookly.local

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000
MEMORY_HEAP_THRESHOLD_MB=3840
MEMORY_RSS_THRESHOLD_MB=3840
