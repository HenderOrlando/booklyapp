# ============================================
# CONFIGURACIÓN DE BASE DE DATOS MONGODB
# ============================================

# Configuración obligatoria
# -------------------------
# URI de conexión a MongoDB (puede incluir múltiples hosts para replica sets)
DATABASE_URI=mongodb://localhost:27017,localhost:27018,localhost:27019

# Nombre de la base de datos
DATABASE_NAME=bookly

# Credenciales de MongoDB
MONGO_INITDB_ROOT_USERNAME=bookly
MONGO_INITDB_ROOT_PASSWORD=bookly123

# Configuración opcional
# ----------------------
# Base de datos de autenticación (default: admin)
MONGO_AUTH_SOURCE=admin

# Reintentos de conexión
MONGO_RETRY_ATTEMPTS=5
MONGO_RETRY_DELAY=3000

# Timeouts (en milisegundos)
# -------------------------
# Tiempo de espera para seleccionar servidor
MONGO_SERVER_SELECTION_TIMEOUT=30000

# Tiempo de espera para operaciones de socket
MONGO_SOCKET_TIMEOUT=45000

# Tiempo de espera para conectar
MONGO_CONNECT_TIMEOUT=30000

# Pool de conexiones
# ------------------
# Máximo número de conexiones en el pool
MONGO_MAX_POOL_SIZE=10

# Mínimo número de conexiones en el pool
MONGO_MIN_POOL_SIZE=2

# Otras opciones
# --------------
# Crear índices automáticamente (recomendado: false en producción)
MONGO_AUTO_INDEX=true

# Conexión directa (sin descubrimiento de topología)
MONGO_DIRECT_CONNECTION=false
