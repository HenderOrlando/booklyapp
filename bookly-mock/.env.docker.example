# ===================================
# BOOKLY DOCKER ENVIRONMENT VARIABLES
# ===================================

# ===============================================
# API GATEWAY
# ===============================================
GATEWAY_PORT=3000
GATEWAY_HOST=0.0.0.0
GATEWAY_DB_URI=mongodb://bookly:bookly123@mongodb-gateway:27017/bookly-mock-gateway?authSource=admin
GATEWAY_DB_NAME=bookly-mock-gateway

# ===============================================
# AUTH SERVICE
# ===============================================
AUTH_PORT=3001
AUTH_DB_URI=mongodb://bookly:bookly123@mongodb-auth:27017/bookly-mock-auth?authSource=admin
AUTH_DB_NAME=bookly-mock-auth
JWT_SECRET=change-this-secret-key-in-production-use-a-strong-random-string
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=bookly-mock-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# ===============================================
# RESOURCES SERVICE
# ===============================================
RESOURCES_PORT=3002
RESOURCES_DB_URI=mongodb://bookly:bookly123@mongodb-resources:27017/bookly-mock-resources?authSource=admin
RESOURCES_DB_NAME=bookly-mock-resources

# ===============================================
# AVAILABILITY SERVICE
# ===============================================
AVAILABILITY_PORT=3003
AVAILABILITY_DB_URI=mongodb://bookly:bookly123@mongodb-availability:27017/bookly-mock-availability?authSource=admin
AVAILABILITY_DB_NAME=bookly-mock-availability

# ===============================================
# STOCKPILE SERVICE
# ===============================================
STOCKPILE_PORT=3004
STOCKPILE_DB_URI=mongodb://bookly:bookly123@mongodb-stockpile:27017/bookly-mock-stockpile?authSource=admin
STOCKPILE_DB_NAME=bookly-mock-stockpile

# ===============================================
# REPORTS SERVICE
# ===============================================
REPORTS_PORT=3005
REPORTS_DB_URI=mongodb://bookly:bookly123@mongodb-reports:27017/bookly-mock-reports?authSource=admin
REPORTS_DB_NAME=bookly-mock-reports

# ===============================================
# EVENT BUS CONFIGURATION (Unified Kafka/RabbitMQ)
# ===============================================
EVENT_BUS_TYPE=rabbitmq
ENABLE_EVENT_STORE=true

# ===============================================
# KAFKA CONFIGURATION
# ===============================================
KAFKA_BROKERS=kafka:9093
KAFKA_CLIENT_ID=bookly-mock
KAFKA_GROUP_ID=bookly-mock-group

# ===============================================
# RABBITMQ CONFIGURATION
# ===============================================
RABBITMQ_URL=amqp://bookly:bookly123@rabbitmq:5672/bookly
RABBITMQ_EXCHANGE=bookly-events
RABBITMQ_EXCHANGE_TYPE=topic
RABBITMQ_DURABLE=true
RABBITMQ_PREFETCH_COUNT=1

# ===============================================
# REDIS CONFIGURATION
# ===============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ===============================================
# APPLICATION SETTINGS
# ===============================================
NODE_ENV=production
LOG_LEVEL=info
API_PREFIX=api/v1

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGINS=http://localhost:4200

# ===============================================
# MONGODB GLOBAL SETTINGS
# ===============================================
MONGO_INITDB_ROOT_USERNAME=bookly
MONGO_INITDB_ROOT_PASSWORD=bookly123
MONGO_AUTH_SOURCE=admin

# ===============================================
# FRONTEND CONFIGURATION
# ===============================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_DATA_MODE=serve
