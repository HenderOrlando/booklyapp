{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "builder": "tsc",
    "assets": [
      {
        "include": "libs/i18n/src/translations/**/*",
        "outDir": "dist",
        "watchAssets": true
      }
    ]
  },
  "monorepo": true,
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "resources-service": {
      "type": "application",
      "root": "apps/resources-service",
      "entryFile": "main",
      "sourceRoot": "apps/resources-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/resources-service/tsconfig.app.json"
      }
    },
    "availability-service": {
      "type": "application",
      "root": "apps/availability-service",
      "entryFile": "main",
      "sourceRoot": "apps/availability-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/availability-service/tsconfig.app.json"
      }
    },
    "stockpile-service": {
      "type": "application",
      "root": "apps/stockpile-service",
      "entryFile": "main",
      "sourceRoot": "apps/stockpile-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/stockpile-service/tsconfig.app.json"
      }
    },
    "reports-service": {
      "type": "application",
      "root": "apps/reports-service",
      "entryFile": "main",
      "sourceRoot": "apps/reports-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/reports-service/tsconfig.app.json"
      }
    }
  }
}
