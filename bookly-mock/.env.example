# ===============================================
# BOOKLY MOCK - ENVIRONMENT VARIABLES
# ===============================================

# ===============================================
# API GATEWAY
# ===============================================
GATEWAY_PORT=3000
GATEWAY_HOST=0.0.0.0
GATEWAY_DB_URI=mongodb://bookly:bookly123@localhost:27022/bookly-mock-gateway?authSource=admin
GATEWAY_DB_NAME=bookly-mock-gateway

# ===============================================
# AUTH SERVICE
# ===============================================
AUTH_PORT=3001
AUTH_DB_URI=mongodb://bookly:bookly123@localhost:27017/bookly-mock-auth?authSource=admin
AUTH_DB_NAME=bookly-mock-auth
JWT_SECRET=bookly-mock-super-secret-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=bookly-mock-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=7d

# ===============================================
# RESOURCES SERVICE
# ===============================================
RESOURCES_PORT=3002
RESOURCES_DB_URI=mongodb://bookly:bookly123@localhost:27017/bookly-mock-resources?authSource=admin
RESOURCES_DB_NAME=bookly-mock-resources

# ===============================================
# AVAILABILITY SERVICE
# ===============================================
AVAILABILITY_PORT=3003
AVAILABILITY_DB_URI=mongodb://bookly:bookly123@localhost:27017/bookly-mock-availability?authSource=admin
AVAILABILITY_DB_NAME=bookly-mock-availability

# ===============================================
# STOCKPILE SERVICE
# ===============================================
STOCKPILE_PORT=3004
STOCKPILE_DB_URI=mongodb://bookly:bookly123@localhost:27017/bookly-mock-stockpile?authSource=admin
STOCKPILE_DB_NAME=bookly-mock-stockpile

# ===============================================
# REPORTS SERVICE
# ===============================================
REPORTS_PORT=3005
REPORTS_DB_URI=mongodb://bookly:bookly123@localhost:27017/bookly-mock-reports?authSource=admin
REPORTS_DB_NAME=bookly-mock-reports

# ===============================================
# EVENT BUS CONFIGURATION (Unified Kafka/RabbitMQ)
# ===============================================
# Event Bus Type: kafka | rabbitmq
EVENT_BUS_TYPE=rabbitmq
ENABLE_EVENT_STORE=true

# ===============================================
# KAFKA CONFIGURATION
# ===============================================
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=bookly-mock
KAFKA_GROUP_ID=bookly-mock-group

# Kafka Topics
KAFKA_TOPIC_AUTH_EVENTS=auth.events
KAFKA_TOPIC_RESOURCES_EVENTS=resources.events
KAFKA_TOPIC_AVAILABILITY_EVENTS=availability.events
KAFKA_TOPIC_STOCKPILE_EVENTS=stockpile.events
KAFKA_TOPIC_REPORTS_EVENTS=reports.events

# ===============================================
# RABBITMQ CONFIGURATION
# ===============================================
RABBITMQ_URL=amqp://bookly:bookly123@localhost:5672/bookly
RABBITMQ_EXCHANGE=bookly-events
RABBITMQ_EXCHANGE_TYPE=topic
RABBITMQ_DURABLE=true
RABBITMQ_PREFETCH_COUNT=1

# RabbitMQ Queues (Legacy - se mantienen por compatibilidad)
RABBITMQ_QUEUE_STOCKPILE=stockpile_events_queue

# ===============================================
# REDIS CONFIGURATION
# ===============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ===============================================
# APPLICATION SETTINGS
# ===============================================
NODE_ENV=development
LOG_LEVEL=debug
API_PREFIX=api/v1

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# ===============================================
# MONGODB GLOBAL SETTINGS
# ===============================================
MONGO_INITDB_ROOT_USERNAME=bookly
MONGO_INITDB_ROOT_PASSWORD=bookly123
MONGO_AUTH_SOURCE=admin

# ===============================================
# SIMULATION SETTINGS (for realistic behavior)
# ===============================================
SIMULATE_NETWORK_LATENCY=true
MIN_LATENCY_MS=10
MAX_LATENCY_MS=100
ERROR_SIMULATION_RATE=0.05

# ===============================================
# FRONTEND CONFIGURATION
# ===============================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000
NEXT_PUBLIC_DATA_MODE=serve
