# API Configuration
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# Direct Services Configuration (Bypass API Gateway)
# Set to 'true' to connect directly to microservices
NEXT_PUBLIC_USE_DIRECT_SERVICES=true

# Microservices URLs (only used when NEXT_PUBLIC_USE_DIRECT_SERVICES=true)
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:3001
NEXT_PUBLIC_RESOURCES_SERVICE_URL=http://localhost:3002
NEXT_PUBLIC_AVAILABILITY_SERVICE_URL=http://localhost:3003
NEXT_PUBLIC_STOCKPILE_SERVICE_URL=http://localhost:3004
NEXT_PUBLIC_REPORTS_SERVICE_URL=http://localhost:3005

# Auth Configuration
NEXTAUTH_URL=http://localhost:4200
NEXTAUTH_SECRET=your-secret-key-here-change-in-production

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Data Mode: 'mock' or 'serve'
# mock: Datos quemados para UI/UX sin backend
# serve: Datos reales del backend (muestra error si backend no disponible)
NEXT_PUBLIC_DATA_MODE=serve

# Feature Flags
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_SSO=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# Monitoring (opcional)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_GA_ID=

# Development
NODE_ENV=development
